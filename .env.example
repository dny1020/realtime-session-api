###############################################
# File example
###############################################
#
# Copy this file to .env and adjust it to your environment.
# NEVER upload .env to Git. Use a secret manager in production
# (e.g. Vault, AWS SSM, Doppler) or a .env outside the repo.
#
# Generate strong secrets (examples):
#   SECRET_KEY:  openssl rand -hex 32
#   POSTGRES_PASSWORD:  openssl rand -hex 24
#   ASTERISK_PASSWORD:  openssl rand -hex 16
#   GF_SECURITY_ADMIN_PASSWORD:  openssl rand -hex 16

# App
APP_NAME=Contact Center API
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=CHANGE_ME_STRONG_HEX_64
API_HOST=api.localhost  # In production: api.midominio.com
ACME_EMAIL=you@example.com

# PostgreSQL (only production / environments with DB enabled)
POSTGRES_DB=contact_center_db
POSTGRES_USER=contact_center
POSTGRES_PASSWORD=CHANGE_ME_SECURE
DATABASE_URL=postgresql://contact_center:CHANGE_ME_SECURE@postgres:5432/contact_center_db


# Asterisk ARI
ARI_HTTP_URL=http://asterisk:8088/ari
ARI_USERNAME=ariuser
ARI_PASSWORD=CHANGE_ME_SECURE
ARI_APP=contactcenter

# Default call settings
DEFAULT_CONTEXT=outbound-ivr
DEFAULT_EXTENSION=s
DEFAULT_PRIORITY=1
# Call timeout in milliseconds (e.g., 60000â€“90000 if your carrier/IVR needs more time)
DEFAULT_TIMEOUT=30000
DEFAULT_CALLER_ID=Outbound Call

# Campaign settings removed (single-call API)

# JWT
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Files
UPLOAD_DIR=./uploads
AUDIO_DIR=./audio

# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_SECURE  # Do not expose Grafana without strong auth / VPN